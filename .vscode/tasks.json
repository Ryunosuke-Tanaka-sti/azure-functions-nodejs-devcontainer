{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Azurite",
            "type": "shell",
            "command": "azurite",
            "args": [
                "--location",
                ".azurite",
                "--debug",
                ".azurite/debug.log"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Build and Start Functions",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}/MyFunctionApp"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Start Azurite",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            }
        }
    ]
}